generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Costumer {
  id                 Int       @id @default(autoincrement())
  full_name          String?   @db.VarChar(255)
  phone              String    @db.VarChar(255)
  promotion_name     String?   @db.VarChar(255)
  promotion_quantity Int?
  promotion_price    Decimal?  @db.Decimal(10, 2)
  utm_source         String?   @db.VarChar(255)
  graduation         String?   @db.VarChar(45)
  created_at         DateTime? @default(now()) @db.DateTime(0)
  updated_at         DateTime? @default(now()) @db.DateTime(0)
}

model Promotion {
  id             Int       @id
  promotion_name String    @db.VarChar(255)
  price          Decimal?  @db.Decimal(10, 2)
  quantity       Int?
  created_at     DateTime? @default(now()) @db.DateTime(0)
  update_at      DateTime? @default(now()) @db.DateTime(0)
}

model Utms {
  id         String    @id @db.VarChar(36)
  link       String    @db.VarChar(255)
  created_at DateTime? @default(now()) @db.DateTime(0)
  update_at  DateTime? @default(now()) @db.DateTime(0)
}
